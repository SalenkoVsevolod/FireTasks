<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <TextView
        android:id="@+id/nameNTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nameN"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/name"
        app:layout_constraintBaseline_toBaselineOf="@+id/nameNTV"
        app:layout_constraintLeft_toLeftOf="@+id/taskDescriptionEdit" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/descriptionName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameNTV" />


    <TextView
        android:id="@+id/tagTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/tagName"
        app:layout_constraintBottom_toBottomOf="@+id/tagSpinner"
        app:layout_constraintRight_toLeftOf="@+id/tagSpinner"
        app:layout_constraintTop_toTopOf="@+id/tagSpinner" />

    <EditText
        android:id="@+id/taskDescriptionEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="top"
        android:hint="@string/descriptionHint"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:minLines="2"
        app:layout_constraintBaseline_toBaselineOf="@+id/descriptionTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/descriptionTextView"
        app:layout_constraintRight_toRightOf="parent" />

    <Spinner
        android:id="@+id/tagSpinner"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:spinnerMode="dropdown"
        app:layout_constraintLeft_toLeftOf="@+id/taskDescriptionEdit"
        app:layout_constraintTop_toBottomOf="@id/taskDescriptionEdit" />

    <TextView
        android:id="@+id/reminder_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Reminders:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tagTextView" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/reminder_recycler"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@id/reminder_tv"
        app:layout_constraintTop_toTopOf="@id/reminder_tv" />

    <ImageView
        android:id="@+id/add_reminder_imv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_control_point_black_24dp"
        app:layout_constraintLeft_toRightOf="@id/reminder_recycler"
        app:layout_constraintTop_toTopOf="@id/reminder_recycler" />

    <TextView
        android:id="@+id/subTasksTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/subtasks_name"
        app:layout_constraintTop_toBottomOf="@id/reminder_recycler" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/subTasksRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:clipToPadding="true"
        app:layout_constraintLeft_toRightOf="@id/subTasksTextView"
        app:layout_constraintTop_toTopOf="@id/subTasksTextView" />

    <Button
        android:id="@+id/addSubTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subTasksRecyclerView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/add_subtask"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subTasksRecyclerView" />


    <Button
        android:id="@+id/addTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@android:string/ok"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addSubTaskButton" />
</android.support.constraint.ConstraintLayout>