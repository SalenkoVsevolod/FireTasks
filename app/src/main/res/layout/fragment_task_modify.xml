<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <TextView
        android:id="@+id/nameNTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nameN"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/name"
        app:layout_constraintBaseline_toBaselineOf="@+id/nameNTV"
        app:layout_constraintLeft_toLeftOf="@+id/taskDescriptionEdit" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/descriptionName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameNTV" />


    <TextView
        android:id="@+id/tagTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/tagName"
        app:layout_constraintBottom_toBottomOf="@+id/tagSpinner"
        app:layout_constraintRight_toLeftOf="@+id/tagSpinner"
        app:layout_constraintTop_toTopOf="@+id/tagSpinner" />

    <EditText
        android:id="@+id/taskDescriptionEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="top"
        android:hint="@string/descriptionHint"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:minLines="2"
        app:layout_constraintBaseline_toBaselineOf="@id/descriptionTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/descriptionTextView"
        app:layout_constraintRight_toRightOf="parent" />

    <Spinner
        android:id="@+id/tagSpinner"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:spinnerMode="dropdown"
        app:layout_constraintLeft_toLeftOf="@+id/taskDescriptionEdit"
        app:layout_constraintTop_toBottomOf="@+id/taskDescriptionEdit" />

    <TextView
        android:id="@+id/subTasksTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtasks_name"
        app:layout_constraintBottom_toBottomOf="@+id/subTasksRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/subTasksRecyclerView"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/addSubTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_subtask"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subTasksRecyclerView" />

    <TextView
        android:id="@+id/timeNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/timeName"
        app:layout_constraintLeft_toLeftOf="@+id/subTasksTextView"
        app:layout_constraintTop_toBottomOf="@+id/addSubTaskButton" />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_0_0"
        app:layout_constraintBaseline_toBaselineOf="@+id/timeNameTextView"
        app:layout_constraintLeft_toRightOf="@+id/timeNameTextView" />

    <Button
        android:id="@+id/addTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@android:string/ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeTextView" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/subTasksRecyclerView"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="true"
        app:layout_constraintLeft_toLeftOf="@+id/tagSpinner"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tagSpinner" />
</android.support.constraint.ConstraintLayout>