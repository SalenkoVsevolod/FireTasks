<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/tag_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/tagName" />

    <EditText
        android:id="@+id/tag_name_edit"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tag_name"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/tag_name"
        android:layout_toRightOf="@id/tag_name"
        android:hint="tag name..."
        android:maxLength="12" />

    <TextView
        android:id="@+id/color_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tag_name_edit"
        android:layout_marginTop="8dp"
        android:text="Color:" />

    <View
        android:id="@+id/color_preview"
        android:layout_width="30dp"
        android:layout_height="18dp"
        android:layout_alignTop="@id/color_name"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/color_name"
        android:layout_toRightOf="@id/color_name"
        android:background="@android:color/holo_red_light" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/tag_name_edit"
        android:layout_alignRight="@id/tag_name_edit"
        android:layout_below="@id/color_preview"
        android:layout_marginTop="32dp">

        <TextView
            android:id="@+id/dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="CANCEL"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textColor="@color/colorAccent" />
    </LinearLayout>


</RelativeLayout>

