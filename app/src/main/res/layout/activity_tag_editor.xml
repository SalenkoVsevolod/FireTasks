<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:padding="32dp">

    <TextView
        android:id="@+id/tag_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/tagName"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/tag_name_edit"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tag_name"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/tag_name"
        android:layout_toRightOf="@id/tag_name"
        android:hint="tag name..."
        android:inputType="text"
        android:lines="1"
        android:maxLength="12"
        android:maxLines="1" />

    <TextView
        android:id="@+id/color_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tag_name_edit"
        android:layout_marginTop="16dp"
        android:text="Color:"
        android:textSize="18sp" />

    <View
        android:id="@+id/color_preview"
        android:layout_width="45dp"
        android:layout_height="27dp"
        android:layout_alignTop="@id/color_name"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/color_name"
        android:layout_toRightOf="@id/color_name"
        android:background="@android:color/holo_red_light" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/tag_name_edit"
        android:layout_alignRight="@id/tag_name_edit"
        android:layout_below="@id/color_preview"
        android:layout_marginTop="32dp">

        <TextView
            android:id="@+id/dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="CANCEL"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>

